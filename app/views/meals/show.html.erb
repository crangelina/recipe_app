<!-- JUMBOTRON -->
<div class="jumbotron" style="background-image: url(<%= @meal.avatar.url %>">
  <h1><%= @meal.name %></h1>
    <div class="show-page-buttons">
      <button class=" btn btn-default"><%= link_to raw("<i class='fa fa-pencil'></i>"), edit_meal_path(@meal) %></button>
      <button class="btn btn-default"><%= link_to raw("<i class='fa fa-trash'></i>"), meal_path, method: "delete" %></button>
    </div>
</div>

<!-- TAG/SERVINGS/DESCRIPTION -->
<div class="row" id="description">
  <div class="col-sm-12 servings">

    <div class="description-button">
      <i class="fa fa-cutlery"></i><br>
      <%= @meal.tag.capitalize %>
    </div>

    <div class="description-button">
      <i class="fa fa-pie-chart"></i><br>
      <%= @meal.servings %> servings 
    </div>
  </div>

  <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <p><%= @meal.description %></p>
  </div>
</div>


<div class="row">

  <!-- INGREDIENTS -->
  <div class="col-sm-4 col-sm-offset-2 col-xs-12">
    <ul id="ingredients">
      <%= render partial: "ingredients/ingredient", collection: @ingredients %>
    </ul>
  </div>
  
  <!-- DIRECTIONS -->
  <div class="col-sm-4 col-xs-10 col-xs-offset-1">
    <ol id="directions">
      <%= render partial: "directions/direction", collection: @directions %>
    </ol>
  </div>

</div>
